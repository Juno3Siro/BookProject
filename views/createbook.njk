<body>
<div>
    <header>
        <a href="/create">Create</a>
    </header>
    <form action="/create" method="post">
        <label>Title</label>
        <br/>

        <input id="inputKeyword" type="text" name="title" placeholder="Enter Title">
        <br/>

        <label>Author</label>
        <br/>

        <input type="text" name="author" placeholder="Author">
        <br/>

        <label>Publisher</label>
        <br/>
        <section>
            <select id="publisher" >
                {% for publisher in publishers %}
                <option value="{{publisher.getId()}}" name="publisher">{{publisher.getName()}}</option>
                {% endfor %}
            </select>
        </section>
        <label>price</label>
        <input type="text" name="price" placeholder="price"><br/>
        <input type="submit" value="create" class="btn btn-primary"><br/>
    </form>
</div>
</body>
</html>